<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyProtocolsApp_Isaac.Views.AppLoginPage"
             Shell.NavBarIsVisible="False"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="Gainsboro"
             BackgroundImageSource="AppLoginBG">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Padding="50,25,50,25"> 

            <Entry x:Name="TxtUserNamen" Placeholder="Email"  FontSize="30" Keyboard="Email" TextColor="#0C0B0B"/>
            <Entry x:Name="TxtPassword" Placeholder="Password"  FontSize="30" Keyboard="Default" IsPassword="True"/>

            <Switch x:Name="SwShowPassword" IsToggled="False" Toggled="SwShowPassword_Toggled"/>

            <Button  x:Name="BtnLogin" Text="Login" BackgroundColor="Green" CornerRadius="15"/>
            <Button  x:Name="BtnSignUp" Text="Sign Up" BackgroundColor="#008019" CornerRadius="15"/>
            <Label   x:Name="LblPasswordRecovery" Text="Password Recovery..." TextColor="#FAF5F5"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>